{
  "scripts": {
    "test": "cross-env FIRESTORE_EMULATOR_HOST=127.0.0.1:8089 jest --runInBand --detectOpenHandles",
    "emu:firestore": "firebase emulators:start --only firestore --project etsy-ai-hacker --import ./.emudata --export-on-exit",
    "test:ci": "npm run emulators:clean && npm test",
    "emulators": "firebase emulators:start",
    "emulators:clean": "taskkill /f /im node.exe /im java.exe 2>nul & firebase emulators:start --only functions,firestore",
    "slack:test": "node -r dotenv/config scripts/slackPing.js 'Webhook werkt'",
    "test:rules": "jest --config ./jest.rules.config.js",
    "rules:exec": "firebase emulators:exec --only firestore \"npm run test:rules\""
  },
  "jest": {
    "testEnvironment": "node",
    "runInBand": true,
    "globalTeardown": "./functions/jest.teardown.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "node-fetch": "^2.7.0",
    "openai": "^5.10.2"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.0.3",
    "cross-env": "^7.0.3",
    "cypress": "^14.5.4",
    "jest": "^29.7.0",
    "@firebase/rules-unit-testing": "3.0.0"
  },
  "version": "1.0.0"
}
