# ---- Required secrets ----
OPENAI_API_KEY=<your-openai-api-key>
SLACK_WEBHOOK_URL=<your-slack-webhook-url>

# ---- API (WordPress connector) ----
API_HMAC_SECRET=<generate-strong-secret>
CORS_ORIGINS=https://your-site.com

# ---- Cost / budget ----
DAILY_BUDGET_USD=25
BUDGET_HARD_STOP=1

# ---- Credits (per user) ----
CREDITS_ENABLED=1
DAILY_CREDITS=500
USE_FIRESTORE_CREDITS=1    # 1 = use Firestore store; 0 = in-memory (tests)

# ---- Retention / TTL (days) ----
LOG_TTL_DAYS=30
RUN_TTL_DAYS=90

# ---- Feature flags ----
STUB_LLM=0
VALIDATOR_STRICT=1
RUN_SUMMARY_ENABLE=1
DISABLE_GENERATION=0
PROMPT_VERSION=v3.4
TEST_ALLOW_CLI_CHECKOUT=0